{
    "compilerOptions": {
      "module": "ES6",
      "strict": true,
      "lib": ["es6"],
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "./lib/types",
      "removeComments": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "Node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*", "**/__mocks__/*"]
  }
  